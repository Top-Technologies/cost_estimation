<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_feed_config_tree" model="ir.ui.view">
    <field name="name">feed.config.tree</field>
    <field name="model">feed.config</field>
    <field name="arch" type="xml">
      <list>
        <field name="name"/>
        <field name="company_id"/>
        <field name="daily_produced_q"/>
        <field name="annual_working_days" optional="hide"/>
        <field name="labor_salary_monthly_config" optional="hide"/>
        <field name="loan_amount_config"/>
        <field name="last_10m_rm_total_config" optional="hide"/>
        <field name="loading_cost_per_quintal_input_config" optional="hide"/>
        <field name="monthly_working_days" optional="hide"/>
        <field name="machine_price_config" optional="hide"/>
        <field name="depreciation_percent" optional="hide"/>
        <field name="interest_rate_percent" optional="hide"/>
      </list>
    </field>
  </record>
  <record id="view_feed_config_form" model="ir.ui.view">
    <field name="name">feed.config.form</field>
    <field name="model">feed.config</field>
    <field name="arch" type="xml">
      <form string="Feed Config">
        <sheet>
          <group>
            <field name="name"/>
            <field name="company_id"/>
            <field name="daily_produced_q"/>
            <field name="annual_working_days"/>
            <field name="monthly_working_days"/>
            <field name="labor_salary_monthly_config"/>
            <field name="machine_price_config"/>
            <field name="depreciation_percent"/>
            <field name="interest_rate_percent"/>
            <field name="loan_amount_config"/>
            <field name="last_10m_rm_total_config"/>
            <field name="loading_cost_per_quintal_input_config"/>
            <field name="allow_config_edit_group_id"/>
          </group>
        </sheet>
        <chatter>
            <field name="message_follower_ids"/>
            <field name="activity_ids"/>
            <field name="message_ids"/>
        </chatter>
      </form>
    </field>
  </record>

  <record id="action_feed_config" model="ir.actions.act_window">
    <field name="name">Configuration Settings</field>
    <field name="res_model">feed.config</field>
    <field name="view_mode">list,form</field>
    <field name="help">Configure defaults for feed estimation</field>
  </record>

  <menuitem id="menu_feed_config_action" name="Settings" parent="menu_feed_config" action="action_feed_config"/>
</odoo>
